<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebBanHang</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fc;
            color: #343a40;
        }

        .navbar {
            background: linear-gradient(90deg, #00c6ff, #0072ff);
        }

        .navbar-brand {
            font-size: 1.8rem;
            font-weight: 600;
            color: #ffffff !important;
        }

        .navbar-nav .nav-link {
            color: #f0f0f0 !important;
            font-weight: 500;
            transition: all 0.3s ease-in-out;
        }

            .navbar-nav .nav-link:hover {
                color: #ffdf80 !important;
            }

        .container main {
            padding: 40px 0;
        }

        footer {
            background-color: #ffffff;
            border-top: 1px solid #dee2e6;
            color: #6c757d;
            padding: 1rem 0;
        }

            footer a {
                color: #007bff;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        input.form-control,
        select.form-control,
        textarea.form-control {
            background-color: #fff;
            border: 1px solid #ced4da;
            box-shadow: none;
            transition: border-color .15s ease-in-out;
        }

            input.form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 0 0.15rem rgba(0, 123, 255, 0.25);
            }

        label {
            font-weight: 500;
            margin-bottom: 0.5rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebBanHang</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">🏠 Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Product" asp-action="Index">📦 Quản lý sản phẩm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Category" asp-action="Index">🗂️Loại sản phẩm</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center">
        <div class="container">
            &copy; 2025 - WebBanHang - <a asp-area="" asp-controller="Home" asp-action="Privacy">Admin</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
